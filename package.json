{
  "name": "slidev-theme-scholarly",
  "version": "0.1.0",
  "type": "module",
  "description": "A scholarly presentation theme for Slidev with LaTeX Beamer-style styling",
  "author": "Jiaxin Peng",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengjiaxin/slidev-theme-scholarly.git"
  },
  "bugs": {
    "url": "https://github.com/pengjiaxin/slidev-theme-scholarly/issues"
  },
  "homepage": "https://github.com/pengjiaxin/slidev-theme-scholarly#readme",
  "keywords": [
    "slidev-theme",
    "slidev",
    "scholarly",
    "academic",
    "presentation",
    "beamer",
    "latex"
  ],
  "files": [
    "components",
    "layouts",
    "styles",
    "setup",
    "utils",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/client": "^52.6.0",
    "@slidev/types": "^52.6.0"
  },
  "devDependencies": {
    "@slidev/cli": "^52.6.0"
  },
  "//": "Learn more: https://sli.dev/guide/write-theme.html",
  "slidev": {
    "colorSchema": "both",
    "defaults": {
      "aspectRatio": "4:3",
      "fonts": {
        "sans": "Inter",
        "serif": "Merriweather",
        "mono": "JetBrains Mono"
      }
    },
    "themeConfig": {
      "author": "Your Name",
      "conference": "Your Conference"
    }
  }
}
