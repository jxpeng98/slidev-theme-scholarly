{
  "name": "slidev-theme-academic",
  "version": "0.0.0",
  "type": "module",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/client": "^52.6.0",
    "@slidev/types": "^52.6.0"
  },
  "devDependencies": {
    "@slidev/cli": "^52.6.0"
  },
  "//": "Learn more: https://sli.dev/guide/write-theme.html",
  "slidev": {
    "colorSchema": "both",
    "defaults": {
      "fonts": {
        "sans": "Nunito Sans",
        "mono": "Fira Code"
      }
    },
    "themeConfig": {
      "author": "Your Name",
      "conference": "Your Conference"
    }
  }
}